      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :app_id %>
    <%= f.text_field :app_id, readonly: true %>
  </div>

  <div class="field">
    <%= f.label :customer_id %>
    <%= f.text_field :customer_id, readonly: true %>
  </div>

  <div class="field">
    <%= f.label :account_no %>
    <%= f.text_field :account_no, readonly: true %>
  </div>

  <div class="field">
    <%= f.label :balance %>
    <%= f.text_field :balance, readonly: true %>
  </div>

  <div class="actions">
    <%= f.submit 'get balance' %>
  </div>


<% end %>

